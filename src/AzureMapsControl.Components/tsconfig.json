{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "target": "es6",
    "baseUrl": "./",
    "lib": ["es6", "dom", "es2016"],
    "declaration": true,
    "declarationDir": "./dist/typings",
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "paths": {
      "azure-maps-control-scalebar": [
        "typings/ScalebarControl"
      ],
      "azure-maps-control-overviewmap": [
        "typings/OverviewMap"
      ],
      "azure-maps-control-animations": [
        "typings/Animations"
      ],
      "azure-maps-control-geolocation": [
        "typings/GeolocationControl"
      ],
      "azure-maps-control-fullscreen": [
        "typings/FullScreenControl"
      ],
      "azure-maps-indoor": [
        "typings/Indoor"
      ],
      "azure-maps-gridded-data-source": [
        "typings/GriddedDataSource"
      ]
    }
  },
  "include": [
    "typescript/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "typings/**/*",
    "types/**/*"
  ]
}